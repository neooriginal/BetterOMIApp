<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GenOmi - Brain Memory System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">GenOmi</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/input">Input</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/action-items">Action Items</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/memories">Memories</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/stream-demo">Stream Demo</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <header class="bg-light py-5">
    <div class="container px-5">
      <div class="row gx-5 justify-content-center">
        <div class="col-lg-8">
          <div class="text-center my-5">
            <h1 class="display-5 fw-bold">Your Personal Brain Memory System</h1>
            <p class="lead mb-4">
              GenOmi helps you remember important information, track action items, and save memories by analyzing your text input with AI.
            </p>
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
              <a href="/input" class="btn btn-primary btn-lg px-4 me-sm-3">Get Started</a>
              <a href="#features" class="btn btn-outline-primary btn-lg px-4">Learn More</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Features Section -->
  <section class="py-5" id="features">
    <div class="container px-5">
      <h2 class="text-center mb-5">Key Features</h2>
      <div class="row gx-5">
        <div class="col-lg-4 mb-5 mb-lg-0">
          <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3 p-4">
            <i class="bi bi-brain"></i>
          </div>
          <h2 class="h4 fw-bold">Smart Memory System</h2>
          <p>
            Our AI-powered system analyzes your text and builds a brain-like structure of entities, events, and relationships.
          </p>
        </div>
        <div class="col-lg-4 mb-5 mb-lg-0">
          <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3 p-4">
            <i class="bi bi-list-check"></i>
          </div>
          <h2 class="h4 fw-bold">Automatic Action Items</h2>
          <p>
            The system extracts action items and tasks from your text and organizes them by priority.
          </p>
        </div>
        <div class="col-lg-4">
          <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3 p-4">
            <i class="bi bi-journal-text"></i>
          </div>
          <h2 class="h4 fw-bold">Important Memories</h2>
          <p>
            Save and recall important conversations and information with automatic expiration for less important items.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Dashboard Preview -->
  <section class="py-5 bg-light">
    <div class="container px-5">
      <h2 class="text-center mb-5">Your Memory Dashboard</h2>
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <div class="card shadow">
            <div class="card-body p-4">
              <div class="dashboard-preview" id="dashboardPreview">
                <div class="text-center p-5">
                  <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>
                  <p class="mt-3">Loading your data...</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-5 bg-primary">
    <div class="container px-5">
      <div class="row gx-5 justify-content-center">
        <div class="col-lg-8 col-xl-6">
          <div class="text-center text-white">
            <h2 class="mb-4">Ready to get started?</h2>
            <a href="/input" class="btn btn-light btn-lg px-4">Input Text Now</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-4 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">
        &copy; 2023 GenOmi Brain Memory System
      </p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Fetch dashboard data when page loads
    document.addEventListener('DOMContentLoaded', async () => {
      try {
        const response = await fetch('/input/summary');
        if (response.ok) {
          const data = await response.json();
          if (data.success) {
            displayDashboard(data.summary);
          } else {
            showError('Failed to load dashboard data');
          }
        } else {
          showError('Failed to connect to server');
        }
      } catch (error) {
        console.error('Error fetching dashboard:', error);
        showError('Error loading dashboard');
      }
    });

    function displayDashboard(summary) {
      const dashboardEl = document.getElementById('dashboardPreview');
      
      // Display counts and recent items
      dashboardEl.innerHTML = `
        <div class="row g-4">
          <div class="col-md-4">
            <div class="card h-100">
              <div class="card-header bg-light">
                <h5 class="card-title mb-0">Brain Entities</h5>
              </div>
              <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                  <span>People:</span>
                  <span class="badge bg-primary rounded-pill">${summary.counts.people}</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                  <span>Locations:</span>
                  <span class="badge bg-primary rounded-pill">${summary.counts.locations}</span>
                </div>
                <div class="d-flex justify-content-between">
                  <span>Events:</span>
                  <span class="badge bg-primary rounded-pill">${summary.counts.events}</span>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card h-100">
              <div class="card-header bg-light">
                <h5 class="card-title mb-0">Action Items</h5>
              </div>
              <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                  <span>Pending:</span>
                  <span class="badge bg-warning rounded-pill">${summary.counts.pendingActionItems}</span>
                </div>
                ${summary.topActionItems && summary.topActionItems.length > 0 ? 
                  summary.topActionItems.map(item => `
                    <div class="d-flex justify-content-between mb-1 small">
                      <span class="text-truncate me-2">${item.title.substring(0, 20)}${item.title.length > 20 ? '...' : ''}</span>
                      <span class="badge bg-secondary rounded-pill">Priority ${item.priority}</span>
                    </div>
                  `).join('') : 
                  '<div class="text-center text-muted small">No action items</div>'
                }
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card h-100">
              <div class="card-header bg-light">
                <h5 class="card-title mb-0">Memories</h5>
              </div>
              <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                  <span>Important:</span>
                  <span class="badge bg-info rounded-pill">${summary.counts.importantMemories}</span>
                </div>
                ${summary.topMemories && summary.topMemories.length > 0 ? 
                  summary.topMemories.map(memory => `
                    <div class="d-flex justify-content-between mb-1 small">
                      <span class="text-truncate me-2">${memory.title.substring(0, 20)}${memory.title.length > 20 ? '...' : ''}</span>
                      <span class="badge bg-secondary rounded-pill">Importance ${memory.importance}</span>
                    </div>
                  `).join('') : 
                  '<div class="text-center text-muted small">No memories</div>'
                }
              </div>
            </div>
          </div>
        </div>
      `;
    }

    function showError(message) {
      const dashboardEl = document.getElementById('dashboardPreview');
      dashboardEl.innerHTML = `
        <div class="text-center p-4">
          <div class="alert alert-warning">
            ${message}
          </div>
          <p>Start by adding some text on the <a href="/input">input page</a>.</p>
        </div>
      `;
    }
  </script>
</body>
</html> 